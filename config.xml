<?xml version='1.0' encoding='utf-8'?>
<widget
    id="com.playsrl.fuels"
    version="0.0.1"
    versionCode	= "7"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:gap= "http://phonegap.com/ns/1.0"
    xmlns:android= "http://schemas.android.com/apk/res/android"
    >
    <name>FuelsMaps</name>
    <description>
        Un applicazione per la gestione degli indirizzi e delle mappe.
    </description>
    <author email="valerio.vogogna@playsrl.com" href="http://playsrl.com">
        Play Srl Team
    </author>
    <content src="index.html" />

    <access origin="*" />
    <access origin="content:///*" />
    <access origin="http://app.ecomotori.net" />

    <allow-navigation href="data:*" />
    <allow-navigation href="*://*.googleapis.com/*"/>

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    </platform>

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <gap:plugin name="com.indigoway.cordova.whitelist.whitelistplugin" version="1.1.1" />
    <gap:plugin name="org.apache.cordova.device" />

    <preference value="black-opaque" name="ios-statusbarstyle"/>
    <preference value="true" name="detect-data-types"/>
    <preference value="false" name="exit-on-suspend"/>
    <preference value="true" name="show-splash-screen-spinner"/>
    <preference value="true" name="auto-hide-splash-screen"/>

    <icon src="res/android/icon.jpg" />
    <icon src="res/android/icon-36-ldpi.png" gap:platform="android" density="ldpi" />
    <icon src="res/android/icon-48-mdpi.png" gap:platform="android" density="mdpi" />
    <icon src="res/android/icon-72-hdpi.png" gap:platform="android" density="hdpi" />
    <icon src="res/android/icon-96-xhdpi.png" gap:platform="android" density="xhdpi" />
    <icon src="www/res/icon/ios/icon-57.png" gap:platform="ios" width="57" height="57"/>
    <icon src="www/res/icon/ios/icon-72.png" gap:platform="ios" width="72" height="72"/>
    <icon src="www/res/icon/ios/icon-57-2x.png" gap:platform="ios" width="114" height="114"/>
    <icon src="www/res/icon/ios/icon-72-2x.png" gap:platform="ios" width="144" height="144"/>

    <gap:splash src="www/res/screen/ios/screen-iphone-portrait.png" gap:platform="ios" width="320" height="480"/>
    <gap:splash src="www/res/screen/ios/screen-iphone-portrait-2x.png" gap:platform="ios" width="640" height="960"/>
    <gap:splash src="www/res/screen/ios/screen-iphone-portrait-568h-2x.png" gap:platform="ios" width="640" height="1136"/>
    <gap:splash src="www/res/screen/ios/screen-ipad-portrait.png" gap:platform="ios" width="768" height="1024"/>
    <gap:splash src="www/res/screen/ios/screen-ipad-landscape.png" gap:platform="ios" width="1024" height="768"/>

    <preference name="orientation" value="portrait" />
</widget>
