<?xml version='1.0' encoding='utf-8'?>
<widget
    id="com.playsrl.fuels"
    version="0.0.1"
    versionCode	= "7"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:gap= "http://phonegap.com/ns/1.0"
    xmlns:android= "http://schemas.android.com/apk/res/android"
    >
    <name>FuelsMaps</name>
    <description>
        Un applicazione per la gestione degli indirizzi e delle mappe.
    </description>
    <author email="valerio.vogogna@playsrl.com" href="http://playsrl.com">
        Play Srl Team
    </author>
    <content src="index.html" />

    <access origin="*" />
    <access origin="content:///*" />
    <access origin="http://app.ecomotori.net" />

    <allow-navigation href="data:*" />
    <allow-navigation href="*://*.googleapis.com/*"/>

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    </platform>

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <gap:plugin name="com.indigoway.cordova.whitelist.whitelistplugin" version="1.1.1" />
    <gap:plugin name="org.apache.cordova.device" />

    <icon src="res/android/icon.jpg" />
    <icon src="res/android/icon-36-ldpi.png" gap:platform="android" density="ldpi" />
    <icon src="res/android/icon-48-mdpi.png" gap:platform="android" density="mdpi" />
    <icon src="res/android/icon-72-hdpi.png" gap:platform="android" density="hdpi" />
    <icon src="res/android/icon-96-xhdpi.png" gap:platform="android" density="xhdpi" />

    <preference name="orientation" value="portrait" />
</widget>
